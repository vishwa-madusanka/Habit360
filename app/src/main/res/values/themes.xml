<resources>
    <!-- Base application theme. -->
    <style name="Theme.Habit360" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your app's main theme here. For example: -->
        <!-- <item name="colorPrimary">@color/purple_500</item> -->
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Habit360</item>
    </style>

    <!-- Style for the Emoji TextViews in the Mood Journal -->
    <style name="EmojiStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>
