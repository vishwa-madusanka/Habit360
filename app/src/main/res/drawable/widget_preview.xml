<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with rounded corners and gradient -->
    <item>
        <shape>
            <corners android:radius="16dp" />
            <gradient
                android:startColor="#8E24AA"
                android:endColor="#6A1B9A"
                android:angle="45" />
        </shape>
    </item>

    <!-- Centered Icon -->
    <item
        android:drawable="@drawable/ic_habit_icon"
        android:width="48dp"
        android:height="48dp"
        android:gravity="center" />
</layer-list>
